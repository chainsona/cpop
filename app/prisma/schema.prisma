generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Poap {
  id          String    @id @default(cuid())
  title       String
  description String
  imageUrl    String
  website     String?
  startDate   DateTime
  endDate     DateTime
  supply      Int?
  status      PoapStatus @default(Draft)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

enum PoapStatus {
  Draft
  Published
  Distributed
}
